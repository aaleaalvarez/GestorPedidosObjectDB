<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="com.example.gestorpedidoshibernate.controllers.ListItemPedidoController">
    <top>
        <MenuBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="0.0" prefWidth="600.0"
                 style="-fx-background-color: #E2AC48;" stylesheets="@style.css" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Menu">
                    <items>
                        <MenuItem fx:id="menuLogout" mnemonicParsing="false" onAction="#Logout" text="Logout"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="menuCerrar" mnemonicParsing="false" onAction="#Cerrar" text="Cerrar"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <SplitPane dividerPositions="0.09851551956815115" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                   BorderPane.alignment="CENTER">
            <items>
                <BorderPane maxHeight="40.0" minHeight="60.0">
                    <center>
                        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets/>
                            </BorderPane.margin>
                            <children>
                                <Label prefHeight="29.0" prefWidth="239.0" text="Información del pedido">
                                    <font>
                                        <Font name="System Bold" size="24.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets right="15.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </center>
                </BorderPane>
                <BorderPane>
                    <center>
                        <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
                            <items>
                                <TableView fx:id="tablaItems" prefHeight="200.0" prefWidth="200.0"
                                           stylesheets="@../../../../style.css">
                                    <columns>
                                        <TableColumn fx:id="idColumn" maxWidth="80.0" minWidth="80.0" prefWidth="75.0"
                                                     text="ID"/>
                                        <TableColumn fx:id="pedidoIdColumn" maxWidth="280.0" minWidth="151.0"
                                                     prefWidth="159.0" text="Pedido ID"/>
                                        <TableColumn fx:id="productoIdColumn" prefWidth="135.0" text="Producto ID"/>
                                        <TableColumn fx:id="cantidadColumn" maxWidth="80.0" minWidth="80.0"
                                                     prefWidth="75.0" text="Cantidad"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <VBox alignment="TOP_CENTER" maxWidth="135.0" minWidth="135.0" prefHeight="200.0"
                                      prefWidth="135.0">
                                    <children>
                                        <Label fx:id="pedidoIdLabel" prefHeight="34.0" prefWidth="119.0"
                                               text="Selecciona un producto para añadir:" wrapText="true">
                                            <VBox.margin>
                                                <Insets top="20.0"/>
                                            </VBox.margin>
                                        </Label>
                                        <ComboBox fx:id="productoBox" prefWidth="110.0"
                                                  style="-fx-background-color: parent; -fx-border-color: #E2AC48; -fx-border-width: 0px 0px 1px 0px;">
                                            <VBox.margin>
                                                <Insets bottom="15.0" top="10.0"/>
                                            </VBox.margin>
                                        </ComboBox>
                                        <Button fx:id="añadirItem" mnemonicParsing="false" onAction="#añadirProducto"
                                                prefHeight="30.0" prefWidth="110.0"
                                                style="-fx-background-color: #E2AC48;" text="Añadir">
                                            <VBox.margin>
                                                <Insets bottom="15.0"/>
                                            </VBox.margin>
                                        </Button>
                                        <Button fx:id="borrarProducto" mnemonicParsing="false"
                                                onAction="#borrarProducto" prefHeight="30.0" prefWidth="110.0"
                                                style="-fx-background-color: #E2AC48;" text="Borrar pedido">
                                            <VBox.margin>
                                                <Insets bottom="15.0"/>
                                            </VBox.margin>
                                        </Button>
                                        <Button fx:id="borrarItem" mnemonicParsing="false" onAction="#borrarItem"
                                                prefHeight="30.0" prefWidth="110.0"
                                                style="-fx-background-color: #E2AC48;" text="Borrar item">
                                            <VBox.margin>
                                                <Insets bottom="20.0"/>
                                            </VBox.margin>
                                        </Button>
                                        <Button fx:id="volverButton" mnemonicParsing="false" onAction="#volver"
                                                prefHeight="30.0" prefWidth="110.0"
                                                style="-fx-background-color: #E2AC48;" text="Volver">
                                            <font>
                                                <Font size="11.0"/>
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>
                            </items>
                        </SplitPane>
                    </center>
                </BorderPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
